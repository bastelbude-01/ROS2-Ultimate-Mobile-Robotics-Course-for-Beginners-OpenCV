      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>

    <collision>
    
      <geometry>
          <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <contact_coefficients mu="1" kp="1e+13" kd="1.0"/>
    </collision>
  </link>

  <joint name="wheel_right_front_joint" type="continuous">
  <axis xyz="1 0.0 0.0"/>

    <parent link="upper_body"/>
    <child link="lidar"/>
      <origin rpy="0 -1.57 0" xyz="0 0.05 -0.34"/>
  </joint>

  <link name="wheel_right_front">
    <inertial>
            <mass value="2" />
            <inertia ixx="0.126" ixy="0.0" ixz="0" 
            iyy="0.1416" iyz="0" izz="0.12481" />
    </inertial>

    <visual>
      

    </collision>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="upper_body"/>
    <child link="camera"/>
    <origin rpy="1.57  0 1.57" xyz="0 0.15 -0.02"/>
  </joint>


      <link name="lidar">
  
    <visual>
      <geometry>
            <mesh filename="package://autonomous_rover/lidar.stl" scale="0.005 0.005 0.005" />
